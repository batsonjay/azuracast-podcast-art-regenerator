# AzuraCast API Configuration
# Copy this file to .env and fill in your actual values

# Your AzuraCast instance URL (without /api suffix)
AZURACAST_URL=https://your-azuracast-instance.com

# Your AzuraCast API key (found in your user profile)
API_KEY=your-api-key-here

# Station ID (found in AzuraCast admin panel)
STATION_ID=1

# Podcast ID (will be auto-discovered during initialization)
PODCAST_ID=

# Default batch size for processing episodes
DEFAULT_BATCH_SIZE=50
